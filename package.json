        "bluebird": "3.1.1",
        "bunyan": "1.5.1",
        "gridfs-stream": "1.1.1",
        "kcors": "1.0.1",
        "koa": "1.1.2",
        "koa-helmet": "0.4.0",
        "koa-logger": "1.3.0",
        "koa-router": "5.3.0",
        "koa-static": "1.5.2",
        "mongodb": "2.0.52",
        "mongoose": "4.3.3"
    },
    "devDependencies": {
        "chai": "3.4.1",
        "eslint": "^1.10.3",
        "mocha": "2.3.4",
