{
  "name": "gridfs-api",
  "version": "0.1.2",
  "description": "MongoDB GridFS files exposed as REST API",
  "scripts": {
    "start": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 ./clusters.js",
    "test": "mocha",
    "prepublish": "npm test && npm run build",
    "build": "rm -rf build/* && babel api bin config index clusters --out-dir build"
  },
  "author": "Rafael Jesus <rafaelljesus86@gmail.com> (http://github.com/rafaeljesus)",
  "license": "MIT",
  "pre-commit": [
    "test"
  ],
  "dependencies": {
    "apidoc": "0.14.0",
    "bluebird": "3.1.1",
    "bunyan": "1.5.1",
    "gridfs-stream": "1.1.1",
    "kcors": "1.0.1",
    "koa": "1.1.2",
    "koa-helmet": "0.4.0",
    "koa-logger": "1.3.0",
    "koa-router": "5.3.0",
    "koa-static": "1.5.2",
    "mongodb": "2.0.52",
    "mongoose": "4.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^6.5.0",
    "chai": "3.4.1",
    "eslint-plugin-babel": "^3.1.0",
    "mocha": "2.3.4",
    "pre-commit": "^1.1.2",
    "snazzy": "^3.0.0",
    "standard": "^6.0.7",
    "supertest": "1.1.0"
  }
}
