    "debug": "2.2.0",
    "gridfs-stream": "^1.1.1",
    "kcors": "1.0.1",
    "koa": "1.1.2",
    "koa-bodyparser": "2.0.1",
    "koa-compress": "1.0.8",
    "koa-helmet": "0.4.0",
    "koa-logger": "1.3.0",
    "koa-router": "5.2.3",
    "koa-static": "1.5.2",
    "mongoose": "4.2.6",
    "morgan": "1.6.1"
  },
  "devDependencies": {
    "chai": "^3.4.1",
