{
  "name": "gridfs-api",
  "version": "0.1.2",
  "description": "MongoDB GridFS files exposed as REST API",
  "scripts": {
    "start": "node bin/www.js",
    "clean": "rm -rf build && mkdir build",
    "build": "npm run clean && babel --presets es2015,stage-2 --plugins transform-runtime --ignore node_modules,test . -d build",
    "serve": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 build/clusters.js",
    "test": "npm run lint && NODE_ENV=test mocha",
    "lint": "standard --verbose | snazzy"
  },
  "author": "Rafael Jesus <rafaelljesus86@gmail.com> (http://github.com/rafaeljesus)",
  "license": "MIT",
  "pre-commit": [
    "test"
  ],
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "it",
      "after",
      "before",
      "afterEach",
      "beforeEach",
      "expect"
    ]
  },
  "dependencies": {
    "gridfs-stream": "1.1.1",
    "kcors": "1.0.1",
    "koa": "1.1.2",
    "koa-helmet": "0.4.0",
    "koa-logger": "1.3.0",
    "koa-router": "5.3.0",
    "mongodb": "2.0.52",
    "mongoose": "4.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^5.0.0",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^6.5.0",
    "chai": "3.4.1",
    "mocha": "2.3.4",
    "pre-commit": "^1.1.2",
    "snazzy": "^3.0.0",
    "standard": "^6.0.7",
    "supertest": "1.1.0"
  },
  "engines": {
    "node": ">=0.12.0"
  }
}
